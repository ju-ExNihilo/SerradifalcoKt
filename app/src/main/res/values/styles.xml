<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="fontFamily">@font/special_elite</item>
        <item name="snackbarStyle">@style/MySnackbar</item>
        <item name="snackbarTextViewStyle">@style/MySnackbarTextView</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>


    <style name="CustomTopCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_top_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">1dp</item>
        <item name="cornerSizeBottomLeft">1dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/colorWhite</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">24sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="HomeTitle">
        <item name="android:textSize">@dimen/home_title_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/underline_small_white</item>
        <item name="android:layout_marginStart">@dimen/home_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/home_title_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/home_title_margin_end</item>
    </style>

    <!-- SnackBar -->
    <style name="MySnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="MySnackbarTextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="mySpinnerItemStyle" >
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/add_input_text_size</item>
    </style>

    <style name="mySpinnerItemStyle2" >
        <item name="android:textColor">@color/colorGray2</item>
        <item name="android:textSize">@dimen/add_input_text_size</item>
    </style>

</resources>
