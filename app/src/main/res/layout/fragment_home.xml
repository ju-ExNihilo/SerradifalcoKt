<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        tools:context=".home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout">

        <!-- Loading panel -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_progress_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary"
                android:elevation="30dp">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/progressBar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Loading panel -->

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/drop_card"
                style="@style/CustomTopCardViewStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:cardElevation="16dp" app:cardMaxElevation="6dp"
                app:cardBackgroundColor="@color/grayTransparent" android:layout_marginTop="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/back4"
                        android:layout_width="0dp"
                        android:layout_height="250dp" android:id="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
                        android:layout_marginTop="4dp"/>
                <ImageView
                        android:src="@drawable/logo6"
                        android:layout_width="263dp"
                        android:layout_height="204dp" android:id="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"/>
                <TextView
                        android:text="Pizza du moment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView5"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        android:background="@drawable/underline_small_white" android:layout_marginEnd="32dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
                <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/textView3"
                        app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:id="@+id/pizza_day"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:cardElevation="16dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/colorTransparent"
                        app:cardCornerRadius="15dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginStart="8dp">

                    <ImageView
                            android:id="@+id/home_pizza_day_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/pizza6"
                            android:scaleType="fitXY"/>
                    <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray1Transparent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:id="@+id/home_pizza_day_name"
                                tools:text="Tartufi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center"
                                android:textColor="@color/colorGreen" android:textSize="36sp"
                                android:background="@drawable/underline_small_green"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp" android:rotation="-20"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="60dp"/>
                        <TextView
                                android:id="@+id/home_pizza_day_component"
                                tools:text="tomates fraÃ®ches, buffala, poudre de truffe, huile de truffe, roquette"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/home_pizza_day_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:rotation="-20"
                                android:textColor="@color/colorWhite"
                                android:layout_marginTop="16dp"
                                android:layout_marginStart="32dp"
                                android:textAlignment="center"
                                android:layout_marginEnd="32dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                        android:src="@drawable/logo_alpha"
                        android:layout_width="0dp"
                        android:layout_height="50dp" android:id="@+id/imageView6"
                        app:layout_constraintTop_toBottomOf="@+id/pizza_day"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"/>
                <ImageView
                        android:src="@drawable/badge2"
                        android:layout_width="111dp"
                        android:layout_height="119dp" android:id="@+id/imageView7"
                        app:layout_constraintTop_toBottomOf="@+id/imageView6"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="A le plaisir de vous annoncer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView6"
                        app:layout_constraintEnd_toStartOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                        android:textColor="@color/colorWhite" android:textAlignment="center"
                        android:textSize="18sp" android:layout_marginStart="8dp"/>
                <TextView
                        android:text="LEONARDO PIZZA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        app:layout_constraintEnd_toStartOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp"
                        android:textAlignment="center" android:textColor="@color/colorWhite"
                        android:textSize="28sp"/>
                <ImageView
                        android:src="@drawable/logo_alpha"
                        android:layout_width="150dp"
                        android:layout_height="36dp" android:id="@+id/imageView8"
                        app:layout_constraintEnd_toStartOf="@+id/imageView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
                <TextView
                        android:text="by"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        app:layout_constraintEnd_toStartOf="@+id/imageView8"
                        android:layout_marginEnd="5dp" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="10dp"
                        android:textColor="@color/colorWhite" android:textSize="18sp"
                        android:textAlignment="viewEnd" android:layout_marginStart="32dp"/>
                <TextView
                        android:text="Nos Pizzas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        app:layout_constraintTop_toBottomOf="@+id/imageView8"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
                        android:layout_marginStart="16dp" android:background="@drawable/underline_small_white"
                        app:layout_constraintEnd_toStartOf="@+id/imageView9" android:layout_marginEnd="32dp"
                        android:textColor="@color/colorWhite" android:textSize="24sp"/>
                <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/textView5"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_recycler_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        tools:listitem="@layout/pizza_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="visible"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="75dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>