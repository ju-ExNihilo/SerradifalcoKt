<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        tools:context=".addUser.AddUserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/drop_card"
                style="@style/CustomTopCardViewStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:cardElevation="16dp" app:cardMaxElevation="6dp"
                app:cardBackgroundColor="@color/grayTransparent" android:layout_marginTop="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/back4"
                        android:layout_width="0dp"
                        android:layout_height="250dp" android:id="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
                        android:layout_marginTop="4dp"/>
                <ImageView
                        android:src="@drawable/logo6"
                        android:layout_width="263dp"
                        android:layout_height="204dp" android:id="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"/>
                <TextView
                        android:id="@+id/add_user_title"
                        android:text="Finaliser l'inscription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        android:background="@drawable/underline_small_white"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_user_title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                        app:boxCornerRadiusBottomEnd="10dp" android:id="@+id/firstname_input_layout"
                        app:boxCornerRadiusBottomStart="10dp" app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Prénom" android:backgroundTint="@color/colorWhite"
                            android:id="@+id/first_name_edit_text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/firstname_error"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp" app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp" android:id="@+id/lastname_input_layout"
                        android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nom" android:backgroundTint="@color/colorWhite"
                            android:id="@+id/lastname_edit_text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/lastname_error"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp" app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp" android:id="@+id/phone_input_layout"
                        android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Téléphone" android:backgroundTint="@color/colorWhite"
                            android:inputType="phone" android:id="@+id/phone_edit_text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/phone_error"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp" app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:id="@+id/password_input_layout"
                        android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mot de passe pour le site web" android:backgroundTint="@color/colorWhite"
                            android:inputType="textPassword" android:id="@+id/password_edit_text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                        android:text="Confirmer"
                        android:layout_width="0dp"
                        android:layout_height="70dp" android:id="@+id/validate_button"
                        app:layout_constraintTop_toBottomOf="@+id/password_error"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                        android:elevation="20dp" android:backgroundTint="@color/colorAccent" android:textSize="18sp"
                        app:cornerRadius="15dp" android:layout_marginTop="24dp"/>
                <TextView
                        android:text="Merci de saisir votre Prénom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/firstname_error"
                        app:layout_constraintTop_toBottomOf="@+id/firstname_input_layout"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="3dp" android:textColor="#F44336" android:textAlignment="center"
                        android:visibility="gone"/>
                <TextView
                        android:text="Merci de saisir votre nom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/lastname_error"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lastname_input_layout" android:layout_marginTop="3dp"
                        android:textAlignment="center" android:textColor="#F44336" android:visibility="gone"/>
                <TextView
                        android:text="Merci de saisir votre numéro de téléphone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/phone_error"
                        app:layout_constraintTop_toBottomOf="@+id/phone_input_layout"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="3dp" android:textAlignment="center" android:textColor="#F44336"
                        android:visibility="gone"/>
                <TextView
                        android:text="Merci de rentrer un mot de passe pour utiliser le site web"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/password_error"
                        app:layout_constraintTop_toBottomOf="@+id/password_input_layout"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="3dp" android:textAlignment="center" android:textColor="#F44336"
                        android:visibility="gone"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>