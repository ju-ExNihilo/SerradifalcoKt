<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        tools:context=".account.AccountFragment">

    <!-- Loading panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/account_progress_layout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/progress_layout_elevation">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Loading panel -->

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/account_default_card"
                    style="@style/CustomTopCardViewStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="700dp"
                    app:cardElevation="@dimen/default_card_elevation"
                    android:layout_marginTop="@dimen/default_card_margin_top"
                    app:cardBackgroundColor="@color/grayTransparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/account_default_card_pizza_image"
                            android:src="@drawable/back4"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/default_card_pizza_image_height"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="fitXY"/>

                    <ImageView
                            android:id="@+id/account_default_card_name_image"
                            android:src="@drawable/logo6"
                            android:layout_width="@dimen/default_card_name_image_width"
                            android:layout_height="@dimen/default_card_name_image_height"
                            app:layout_constraintTop_toTopOf="@+id/account_default_card_pizza_image"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/default_card_name_image_margin_top"/>
                    <TextView
                            android:text="Mes Coordonnées :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_user_data_title"
                            app:layout_constraintTop_toBottomOf="@+id/account_default_card_pizza_image"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/HomeTitle" android:textSize="20sp"/>
                    <TextView
                            android:text="Prénom :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_first_name_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp" android:textColor="@color/colorWhite"
                            android:textStyle="bold" app:layout_constraintTop_toTopOf="@+id/account_first_name"
                            app:layout_constraintBottom_toBottomOf="@+id/account_first_name"/>
                    <TextView
                            android:text="Julien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_first_name"
                            app:layout_constraintTop_toBottomOf="@+id/account_user_data_title"
                            app:layout_constraintStart_toEndOf="@+id/account_first_name_title"
                            android:layout_marginTop="16dp" android:layout_marginStart="8dp"
                            android:textColor="@color/colorGreen" android:textStyle="italic" android:textSize="18sp"/>
                    <TextView
                            android:text="Nom :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/account_last_name_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp" android:textColor="@color/colorWhite"
                            android:textStyle="bold" app:layout_constraintEnd_toEndOf="@+id/account_first_name_title"
                            app:layout_constraintTop_toTopOf="@+id/account_last_name"
                            app:layout_constraintBottom_toBottomOf="@+id/account_last_name"/>
                    <TextView
                            android:text="Gorin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_last_name"
                            app:layout_constraintTop_toBottomOf="@+id/account_first_name"
                            app:layout_constraintStart_toEndOf="@+id/account_last_name_title"
                            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                            android:textColor="@color/colorGreen" android:textSize="18sp" android:textStyle="italic"/>
                    <TextView
                            android:text="Télèphone :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_phone_title"
                            android:textColor="@color/colorWhite" android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/account_phone"
                            app:layout_constraintBottom_toBottomOf="@+id/account_phone"/>
                    <TextView
                            android:text="0620721389"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/account_phone"
                            android:textColor="@color/colorGreen" android:textSize="18sp" android:textStyle="italic"
                            app:layout_constraintTop_toBottomOf="@+id/account_last_name"
                            app:layout_constraintStart_toEndOf="@+id/account_phone_title"
                            android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>
                    <ImageButton
                            android:src="@drawable/ic_settings"
                            android:layout_width="40dp"
                            android:layout_height="0dp" android:id="@+id/account_update_button"
                            android:background="@color/colorTransparent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@+id/account_user_data_title"
                            app:layout_constraintBottom_toBottomOf="@+id/account_user_data_title"/>

                    <TextView
                            android:text="Mes Adresses :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/account_user_address_title"
                            app:layout_constraintTop_toBottomOf="@+id/account_phone_title"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/HomeTitle" android:textSize="20sp" android:layout_marginTop="24dp"
                            app:layout_constraintEnd_toEndOf="@+id/account_user_data_title"/>
                    <ImageButton
                            android:src="@drawable/ic_add"
                            android:layout_width="40dp"
                            android:layout_height="0dp" android:id="@+id/account_add_address_button"
                            android:background="@color/colorTransparent" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/account_user_address_title"
                            app:layout_constraintBottom_toBottomOf="@+id/account_user_address_title"
                            android:layout_marginEnd="8dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>