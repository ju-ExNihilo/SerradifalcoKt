<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        tools:context=".login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorPrimary" android:elevation="25dp"
            android:visibility="gone" android:id="@+id/login_progress_layout">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/drop_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardBackgroundColor="@color/colorTransparent"
                    app:cardElevation="20dp"
                    style="@style/ShapeAppearanceOverlay_card_custom_top_corners"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.9">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:srcCompat="@drawable/login_pic"
                        android:id="@+id/imageView2"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="top"
                        android:padding="0dp"/>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/drop_card"
                    style="@style/CustomTopCardViewStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardElevation="16dp"
                    app:cardMaxElevation="6dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/login_pic"
                    android:padding="0dp" app:cardBackgroundColor="@color/grayTransparent"
                    android:backgroundTintMode="add">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/constraintLayout">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:id="@+id/login_google_button"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            android:layout_marginTop="100dp">
                        <ImageView
                                android:src="@drawable/border_radius_top"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/imageView4"/>
                        <TextView
                                android:text="Connexion avec Google"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textView4"
                                android:gravity="center"
                                style="@style/LoginButton"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:id="@+id/login_email_button"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            app:layout_constraintTop_toBottomOf="@+id/login_google_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="24dp"
                            app:cardElevation="8dp"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="32dp">
                        <ImageView
                                android:src="@drawable/border_radius_top"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/imageView3"/>
                        <TextView
                                android:text="Connexion par Email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textView3"
                                android:gravity="center" style="@style/LoginButton"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            android:text="Pizza Au Feu De Bois"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/LoginButton" android:textSize="30sp"
                            app:layout_constraintHorizontal_bias="1.0"
                            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/imageView6"
                            android:layout_marginTop="8dp" android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="150dp" app:srcCompat="@drawable/logo6"
                            android:id="@+id/imageView6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp" android:scaleType="fitXY"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="230dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>