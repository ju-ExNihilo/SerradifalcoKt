<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorGrayDark"
        android:background="@color/colorGrayDark">

    <androidx.cardview.widget.CardView
            android:id="@+id/nav_header_card_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_header_card_view_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/nav_header_card_view_margin_top"
            android:layout_marginStart="@dimen/nav_header_card_view_horizontal_margin"
            android:layout_marginEnd="@dimen/nav_header_card_view_horizontal_margin"
            app:cardCornerRadius="@dimen/nav_header_card_view_radius">

        <ImageView
                android:id="@+id/nav_header_card_view_family_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home_family"
                android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:id="@+id/nav_header_logo_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_header_logo_image_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_card_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/nav_header_logo_image_horizontal_image"
            android:layout_marginEnd="@dimen/nav_header_logo_image_horizontal_image"
            android:layout_marginBottom="@dimen/nav_header_logo_image_margin_bottom"
            android:layout_marginTop="@dimen/nav_header_logo_image_margin_top"
            app:srcCompat="@drawable/logo_alpha"
            android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>